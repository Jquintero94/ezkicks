{
    "manifest_version": 2,
    "name": "EZKicks Video Review",
    "description": "Displays a YouTube video review of the shoe selected on any webpage for the EZKicks app.",
    "version": "1.0",
    "Icons": {
        "16": "Icons/Icon16.png",
        "48": "Icons/Icon48.png",
        "128": "Icons/Icon128.png"
    },
    "permissions": [
        "activeTab",
        "https://www.youtube.com/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "EZKicks Video Review",
        "default_popup": "popup.html"
    }
}
